<h1>Lezioni</h1>
<% @lessons_by_date.each do |date, lessons| %>
  <div class="date-group">
    <h2 class="date-header"><%= date.strftime("%A %d %B") %></h2>
    <ul>
      <% lessons.each do |lesson| %>
        <li>
          <div>
            <%= lesson.course.name %>
          </div>
          <div>
            <%= lesson.start_time.strftime("%H:%M") %> - <%= lesson.end_time.strftime("%H:%M") %>
          </div>
          <div>
            <% if lesson.teacher.present? %>
              <%= lesson.teacher %>
            <% else %>
              <%= "Docente non disponibile" %>
            <% end %>
          </div>
          <div>
            <%= lesson.room %>
          </div>
        </li>
      <% end %>
    </ul>
  </div>
<% end %>