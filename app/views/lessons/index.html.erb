<h2 class="text-2xl font-bold">Lezioni</h2>
<p class="text-sm text-gray-600">Lezioni della <span class="underline">settimana corrente</span> e della <span class="underline">prossima</span></p>
<div class="flex flex-col gap-6 mt-4">
  <% @lessons_by_date.each do |date, lessons| %>
    <div class="date-group">
      <div class="flex items-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-[#9B1C12]" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
          <rect x="3" y="4" width="18" height="18" rx="2" ry="2"></rect>
          <line x1="16" y1="2" x2="16" y2="6"></line>
          <line x1="8" y1="2" x2="8" y2="6"></line>
          <line x1="3" y1="10" x2="21" y2="10"></line>
        </svg>
        <h3 class="text-lg font-medium text-[#9B1C12]"><%= date.strftime("%A %d %B") %></h3>
      </div>
      <ul class="flex flex-col gap-2 mt-2">
        <% lessons.each do |lesson| %>
          <li class="flex flex-col gap-2 px-4 py-4 border-2 border-black rounded-sm shadow-[4px_4px_0_0_rgba(0,0,0,1)]">
            <div class="font-medium"><%= lesson.course.name.split(" - ").first %></div>
            <div class="text-sm text-gray-600 mt-[-4px]"><%= lesson.name %></div>
            <div class="flex flex-col gap-1 mt-1">
              <div class="flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <circle cx="12" cy="12" r="10"></circle>
                  <polyline points="12 6 12 12 16 14"></polyline>
                </svg>
                <span class="text-sm text-gray-600"><%= lesson.start_time.strftime("%H:%M") %> - <%= lesson.end_time.strftime("%H:%M") %></span>
              </div>
              <div class="flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                  <circle cx="12" cy="7" r="4"></circle>
                </svg>
                <span class="text-sm text-gray-600"><%= lesson.teacher.present? ? lesson.teacher : "Docente non disponibile" %></span>
              </div>
              <div class="flex items-center gap-2">
                <svg xmlns="http://www.w3.org/2000/svg" class="w-4 h-4" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                  <path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"></path>
                  <circle cx="12" cy="10" r="3"></circle>
                </svg>
                <span class="text-sm text-gray-600"><%= lesson.room %></span>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
</div>