<h2 class="mb-4 text-2xl font-bold">Iscriviti</h2>
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <div class="flex flex-col gap-2">
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="w-full field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, placeholder: "nome.cognome@studenti.unipd.it", autocomplete: "email", class: "w-full border-b-2 border-black" %>
      <p class="text-sm text-gray-500">Usa l'email istituzionale. La usiamo per comunicarti cambiamenti degli orari delle lezioni :)</p>
    </div>
    <div class="w-full field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
        <em>(minimo <%= @minimum_password_length %> caratteri)</em>
      <% end %><br />
      <%= f.password_field :password, placeholder: "password_sicura", autocomplete: "new-password", class: "w-full border-b-2 border-black" %>
    </div>
    <div class="w-full field">
      <%= f.label :password_confirmation, "Conferma password" %><br />
      <%= f.password_field :password_confirmation, placeholder: "password_sicura (di nuovo)", autocomplete: "new-password", class: "w-full border-b-2 border-black" %>
    </div>
    <div class="w-full mt-4 actions">
      <%= f.submit "Iscriviti", class: "w-full border-2 border-black py-2 px-4 hover:bg-black hover:text-white active:bg-black active:text-white" %>
    </div>
  </div>
<% end %>
<div class="mt-4">
  <p>Se hai gi√† un account, <%= link_to "accedi", new_session_path(resource_name), class: "text-[#9B1C12] underline" %></p>
  <%#= render "devise/shared/links" %>
</div>
