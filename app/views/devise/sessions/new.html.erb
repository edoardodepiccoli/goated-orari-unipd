<h2 class="mb-4 text-2xl font-bold">Accedi</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="flex flex-col gap-2">
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="w-full field">
      <%= f.label :email %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full border-b-2 border-black" %>
    </div>
    <div class="w-full field">
      <%= f.label :password %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "w-full border-b-2 border-black" %>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="w-full field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me, "Ricordami", class: "ml-2" %>
      </div>
    <% end %>
    <div class="w-full mt-4 actions">
      <%= f.submit "Accedi", class: "w-full border-2 border-black py-2 px-4 hover:bg-black hover:text-white active:bg-black active:text-white" %>
    </div>
  </div>
<% end %>
<div class="mt-4">
  <p>Non hai un account? <%= link_to "Iscriviti", new_registration_path(resource_name), class: "text-[#9B1C12] underline" %></p>
</div>
